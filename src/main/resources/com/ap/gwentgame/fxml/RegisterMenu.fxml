<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="561.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ap.gwentgame.client.controller.RegisterMenuController">
   <ImageView fx:id="imageview" fitHeight="800" fitWidth="1200">
      <image>
      </image>
   </ImageView>
   <BorderPane layoutX="373.0" layoutY="141.0" />
   <VBox alignment="CENTER" layoutX="525.0" layoutY="201.0" maxWidth="300" spacing="10">
      <TextField fx:id="usernameField" alignment="CENTER" maxWidth="200" promptText="User name" />
      <PasswordField fx:id="password" alignment="center" maxHeight="16" maxWidth="200" promptText="enter your password" />
      <PasswordField fx:id="repeatedPassword" alignment="center" maxHeight="16" maxWidth="200" promptText="repeat your password" />
      <TextField fx:id="nickName" alignment="CENTER" maxWidth="200" promptText="enter your nickname" />
      <TextField fx:id="email" alignment="CENTER" maxWidth="200" promptText="enter your email" />
      <ChoiceBox fx:id="securityQuestion" prefWidth="150.0" />
      <TextField fx:id="answer" alignment="CENTER" maxWidth="200" promptText="enter your answer" />
      <Button mnemonicParsing="false" text="Generate password" onMouseClicked="#generatePassword" />
      <HBox alignment="CENTER" maxWidth="300" spacing="10">
         <Button onMouseClicked="#signup" text="sign up" />
      </HBox>
      <HBox alignment="CENTER" maxWidth="300" spacing="10">
      <Button onMouseClicked="#backToStart" text="back" />
      </HBox>
   </VBox>
</AnchorPane>
