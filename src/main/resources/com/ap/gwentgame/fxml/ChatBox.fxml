<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="chatBoxStackPane" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: rgba(0, 0, 0, 0.5);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ap.gwentgame.client.view.viewController.ChatBoxController">
   <children>
      <AnchorPane prefHeight="800.0" prefWidth="1200.0" StackPane.alignment="CENTER_LEFT">
         <children>
            <VBox alignment="CENTER_LEFT" layoutX="840.0" layoutY="100.0" prefHeight="600.0" prefWidth="350.0">
               <HBox prefHeight="46.0" prefWidth="350.0">
                  <children>
                      <Label alignment="CENTER" contentDisplay="RIGHT" prefHeight="34.0" prefWidth="279.0" text="Chat">
                        <HBox.margin>
                           <Insets left="40.0" />
                        </HBox.margin>
                     </Label>
                     <Button alignment="CENTER_RIGHT" onMouseClicked="#closeChatBox" prefHeight="34.0" prefWidth="50.0">
                        <graphic>
                           <ImageView fx:id="back" fitHeight="25.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
                        </graphic>
                     </Button>
                  </children>
               </HBox>
               <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefHeight="540.0" prefWidth="350.0" >
                  <content>
                     <VBox fx:id="boxPane" prefHeight="100" prefWidth="350.0" />
                  </content>
               </ScrollPane>
               <HBox prefHeight="50.0" prefWidth="350.0">
                  <children>
                      <TextField fx:id="messageField" onKeyPressed="#handleEnterPressed" prefHeight="500.0" prefWidth="350.0" promptText="send messages" />
                     <Button onMouseClicked="#sendMessage" prefHeight="40.0" prefWidth="50.0">
                        <graphic>
                           <ImageView fx:id="send" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
                        </graphic></Button>
                  </children>
               </HBox>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
